<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Main"
    android:background="@mipmap/background">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:id="@+id/linearLayout">



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="94dp"
            android:id="@+id/linearLayoutDisplayQuestion">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:id="@+id/questionText"
                android:layout_gravity="center_vertical" />
        </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayoutResponseButtons"
            android:weightSum="1"
            android:layout_gravity="center_horizontal">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="89dp"
                    android:layout_height="70dp">

                    <Button
                        android:layout_width="74dp"
                        android:layout_height="match_parent"
                        android:text="@string/button"
                        android:id="@+id/buttonYes"
                        android:onClick="buttonYes"
                        android:textColor="#ffffffff"
                        style="@style/btnStyleOrange" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="108dp"
                    android:layout_height="68dp">

                    <Button
                        android:layout_width="87dp"
                        android:layout_height="match_parent"
                        android:text="@string/buttonDontKnow"
                        android:id="@+id/buttonDontKnow"
                        android:onClick="buttonDontKnow"
                        android:textColor="#ffffffff"
                        style="@style/btnStyleOrange" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" >

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/buttonNo"
                        android:id="@+id/buttonNo"
                        android:onClick="buttonNo"
                        android:textColor="#ffffffff"
                        style="@style/btnStyleOrange" />
                </LinearLayout>
            </LinearLayout>

    </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_gravity="top"
            android:id="@+id/layoutResponse">
            <ImageView
                android:id="@+id/itemImage"
                android:layout_width="match_parent"
                android:layout_height="150dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayoutFindResponse"
            android:layout_gravity="bottom"
            android:paddingBottom="110dp"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Est ce le bon sport ?"
                android:id="@+id/textView" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:baselineAligned="false">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="149dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical">

                    <Button
                        android:layout_width="132dp"
                        android:layout_height="wrap_content"
                        android:text="Oui ! "
                        android:id="@+id/buttonReplay"
                        android:onClick="buttonReplay"
                        android:layout_gravity="center_vertical"
                        style="@style/btnStyleGenoa" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="138dp"
                    android:layout_height="fill_parent">

                    <Button
                        style="@style/btnStyleSandrift"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Non"
                        android:id="@+id/buttonShowAddQuestion"
                        android:onClick="buttonShowAddQuestion"
                        android:layout_gravity="center_vertical" />
                </LinearLayout>

            </LinearLayout>



            <!-- <LinearLayout
                 android:orientation="horizontal"
                 android:layout_width="wrap_content"
                 android:layout_height="fill_parent"
                 android:layout_gravity="center_horizontal"
                 android:id="@+id/linearLayoutContniueGame">

                 <Button
                     style="?android:attr/buttonStyleSmall"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Continuer"
                     android:id="@+id/buttonContinue"
                     android:onClick="buttonContinue"
                     />
             </LinearLayout>-->

        </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
